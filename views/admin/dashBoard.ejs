<% include('../layouts/header.ejs') %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<style>
    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
    }

    th {
        background-color: #4CAF50;
        color: white;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #ddd;
    }

    td {
        border-bottom: 1px solid #ddd;
    }

    .not-verified {
        color: #e74c3c;
        font-weight: bold;
    }

    .verified {
        color: #2ecc71;
        font-weight: bold;
    }

    .no-users {
        text-align: center;
        color: #888;
        font-style: italic;
    }

    .action-btn {
        margin: 5px;
        padding: 5px 10px;
        font-size: 0.9em;
        cursor: pointer;
        border: none;
        border-radius: 4px;
    }

    .edit-btn {
        background-color: #3498db;
        color: white;
    }

    .delete-btn {
        background-color: #e74c3c;
        color: white;
    }

    .logout-btn {
        background-color: #2ecc71;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
        margin: 20px;
    }
    /* Centering the form */
form {
    width: 60%;
    margin: 20px auto;
    font-family: Arial, sans-serif;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    background-color: #f9f9f9;
}

/* Label styling */
form label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #333;
}

/* Input fields styling */
form input[type="text"],
form input[type="email"],
form select {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 1em;
}

/* Dropdown styling */
form select {
    appearance: none;
    background-color: #fff;
    cursor: pointer;
}

/* Submit button styling */
form button[type="submit"] {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    font-size: 1em;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

/* Submit button hover effect */
form button[type="submit"]:hover {
    background-color: #45a049;
}
/* Search button styling */
.search-btn {
    background-color: #3498db;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1em;
    margin: 10px;
    transition: background-color 0.3s ease;
}

/* Search button hover effect */
.search-btn:hover {
    background-color: #2980b9;
}

/* Centering the search form */
.search-form {
    text-align: center;
    margin: 20px auto;
}
.add-user-btn {
    background-color: #2ecc71;
    color: white;
    padding: 10px 20px;
    border-radius: 4px;
    text-decoration: none;
    cursor: pointer;
    display: inline-block;
    transition: background-color 0.3s ease;
}

.add-user-btn:hover {
    background-color: #27ae60;
}


</style>

<!-- Logout Button -->
<a href="/admin/adminLogout" class="logout-btn" style="text-align: right; margin: 10px; text-decoration: none;">Logout</a>


<!-- Search Form -->
<form action="/admin/searchUser" method="get" class="search-form">
    <input type="text" name="query" placeholder="Search by username or email" required
           style="padding: 10px; width: 300px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; font-size: 1em;">
    <button type="submit" class="search-btn">Search</button>
</form>

<a href="/admin/addUsers" class="add-user-btn" style="text-align: right; margin: 10px; display: inline-block;">Add New User</a>




<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (users.length > 0) { %>
            <% users.forEach(user => { %>
                <% if (user.is_admin === false) { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <!-- <td>
                            <% if (user.is_verified == 0) { %>
                                <p class="not-verified">Not Verified</p>
                            <% } else { %>
                                <p class="verified">Verified</p>
                            <% } %>
                        </td> -->
                        <td>
                            <a href="/admin/editUser?id=<%= user._id %>" class="add-user-btn">Edit</a>
                            <a href="#" class="add-user-btn delete-btn" data-id="<%= user._id %>" style="text-align: right; margin: 10px; display: inline-block;">Delete</a>

                        </td>
                    </tr>
                <% } %>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="4" class="no-users">Users not found</td>
            </tr>
        <% } %>
    </tbody>
</table>


<script>
    $(document).ready(function() {
        $('.delete-btn').on('click', function(e) {
            e.preventDefault();

            const userId = $(this).data('id'); 
            if (confirm('Are you sure you want to delete this user?')) {
                $.ajax({
                    url: '/admin/deleteUser?id=' + userId,
                    type: 'GET', 
                    success: function(response) {
                        // Remove the user row from the table
                        $('a.delete-btn[data-id="' + userId + '"]').closest('tr').remove();
                    },
                    error: function(err) {
                        alert('Error deleting user: ' + err.responseText);
                    }
                });
            }
        });
    });
</script>

